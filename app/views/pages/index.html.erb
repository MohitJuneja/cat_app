<h1>Pages#index</h1>
</h1>
<% content_for :header do %>
	How many Pages? <%= @pages.size  %>
<% end %>
<div>
	<%= link_to("Add New Page",new_page_path, :class => 'action new') %>
</div>
          <h6 class="tx-inverse tx-uppercase tx-bold tx-14 mg-t-80 mg-b-10">All Pages</h6>
          <p class="mg-b-25 mg-lg-b-50">Live view of all the pages.</p>

<div  class="bd rounded table-responsive">
	<table class="table table-bordered mg-b-0">
		<th>Name </th>
		<th>Visible </th>
		<th>Position </th>
		<th>Actions </th>
		<% @pages.each do |s| %>	
		<tr> 
			<td> <%= s.name %></td>
			<td> <%= s.visible %></td>
			<td> <%= s.position %></td>
			<td> 
				<%= link_to("Show", page_path(s.id), :class => "action show") %>
				<%= link_to("Edit", edit_page_path(s.id), :class => "action edit") %>
				<%= link_to("Delete", delete_page_path(s.id), :class => "action delete")%>
			</td>
		</tr>
	<% end %>
	</table>
</div>
